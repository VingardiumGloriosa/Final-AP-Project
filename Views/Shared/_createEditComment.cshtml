@model cbsStudents.Models.Entities.Comment

<div class="form-group">
    <label asp-for="Text" class="control-label"></label>
    <input asp-for="Text" class="form-control" />
    <span asp-validation-for="Text" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TimeStamp" class="control-label"></label>
    <input asp-for="TimeStamp" class="form-control" />
    <span asp-validation-for="TimeStamp" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Post" class="control-label"></label>
    <select asp-for="PostId" class="form-control" asp-items="ViewBag.PostId"></select>
</div>
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
</div